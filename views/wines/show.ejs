

<div class="col-lg-12">
  <h2><%= wine.name %></h2>


  <% if(locals.isAuthenticated) { %>
    <a href="/wines/<%= wine.id %>/edit" class="button">Edit</a>
    <form method="POST" action="/wines/<%= wine.id %>">
    <input type="hidden" name="_method" value="DELETE">
    <button>Delete</button>
    </form>
    <% } %>

    <p>
      <img class = "img-fluid"src="<%= wine.image %>" alt="<%= wine.name %>">
      <%= wine.name%><br>
      <%= wine.pairings %><br>
      <%= wine.tastingNotes %><br>
      <%= wine.buyLink %><br>
    </p>
